/*--------------------------------------------------------------------
*
* $MEDIA
*
--------------------------------------------------------------------*/

.media-outlined,
img
  border-radius: 3px

figure
  width: auto
  margin: 0

  img
    vertical-align: middle

  figcaption
    color: $gray
    font-size: $font-small

//- Outlined container

.media-outlined
  display: inline-block
  padding: 5px
  border: $ui-border 

@media screen and (max-width: $breakpoint-smartphone)

  figure
    text-align: center

    img + img
      margin: 5px auto 0

@media screen and (min-width: $breakpoint-smartphone+1)

  figure

    img + figcaption
      margin-bottom: 5px

      &:not(:only-child)
        margin-right: 5px